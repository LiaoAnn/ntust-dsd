{
    "name": "Project 1",
    "workspaceFolder": "/workspace",
    "build": {
        "dockerfile": "dockerfile"
    },
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
    ],
    "runArgs": [
        "--name",
        "project1_devcontainer"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
				"ms-vscode.cpptools",
				"github.copilot",
				"ms-vscode.cpptools-extension-pack",
				"ms-vscode.cpptools-themes",
				"sonarsource.sonarlint-vscode",
				"formulahendry.code-runner",
				"joaompinto.vscode-graphviz"
			],
            "settings": {
                "files.associations": {
                    "iostream": "cpp",
                    "array": "cpp",
                    "atomic": "cpp",
                    "bit": "cpp",
                    "*.tcc": "cpp",
                    "cctype": "cpp",
                    "clocale": "cpp",
                    "cmath": "cpp",
                    "cstdarg": "cpp",
                    "cstddef": "cpp",
                    "cstdint": "cpp",
                    "cstdio": "cpp",
                    "cstdlib": "cpp",
                    "cwchar": "cpp",
                    "cwctype": "cpp",
                    "deque": "cpp",
                    "unordered_map": "cpp",
                    "vector": "cpp",
                    "exception": "cpp",
                    "algorithm": "cpp",
                    "functional": "cpp",
                    "iterator": "cpp",
                    "memory": "cpp",
                    "memory_resource": "cpp",
                    "numeric": "cpp",
                    "optional": "cpp",
                    "random": "cpp",
                    "string": "cpp",
                    "string_view": "cpp",
                    "system_error": "cpp",
                    "tuple": "cpp",
                    "type_traits": "cpp",
                    "utility": "cpp",
                    "fstream": "cpp",
                    "initializer_list": "cpp",
                    "iosfwd": "cpp",
                    "istream": "cpp",
                    "limits": "cpp",
                    "new": "cpp",
                    "ostream": "cpp",
                    "sstream": "cpp",
                    "stdexcept": "cpp",
                    "streambuf": "cpp",
                    "typeinfo": "cpp"
                },
                "editor.formatOnSave": true
            }
        }
    }
}